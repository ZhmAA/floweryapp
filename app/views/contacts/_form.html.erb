<%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".6s">
        <%= f.input :name, :required => true, placeholder: 'Your Name', input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".8s">
        <%= f.input :email, :required => true, placeholder: 'Your Email', input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay="1.2s">
        <%= f.input :message, :as => :text, :required => true, placeholder: 'Message', input_html: { class: 'form-control' } %>
    </div> 
    <div id="submit" class="wow fadeInDown" data-wow-duration="500ms" data-wow-delay="1.4s">
        <div class= "hidden">
            <%= f.input :nickname, :hint => 'Leave this field blank!' %>
        </div>
        <div>
            <%= f.button :submit, 'Отправить', :class => "btn btn-default btn-send", :id => 'contact-submit' %>
        </div>
    </div>
<% end %>
